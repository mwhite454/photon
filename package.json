{
  "name": "photon-dev",
  "private": true,
  "version": "1.0.0",
  "description": "Photon monorepo",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@playwright/test": "latest",
    "@types/mocha": "^10.0.10",
    "browserify": "^17.0.0",
    "lerna": "^8.2.4",
    "licensify": "^3.1.3",
    "mocha": "^10.0.0",
    "opentype.js": "^1.1.0",
    "playwright": "^1.56.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.6.3",
    "typescript-json-schema": "^0.53.1",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "express": "^4.18.2"
  },
  "workspaces": [
    "docs/demos",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "build-tools": "lerna run build-tools",
    "build": "lerna run build",
    "demo": "lerna run demo",
    "docs": "lerna run docs --parallel",
    "docs:build": "cd docs-new && source ../venv/bin/activate && mkdocs build",
    "docs:serve": "cd docs-new && source ../venv/bin/activate && mkdocs serve",
    "start": "npm run docs:build && node playground-server.js",
    "start-simple": "npx http-server -p 8020 -o /docs/playground/",
    "dev": "npm run docs:serve",
    "test": "npm install && npm run build && npm run build-tools && lerna run test --parallel && npm run docs",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:report": "playwright show-report",
    "postinstall": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mwhite454/photon.git"
  },
  "author": "Myka White",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mwhite454/photon/issues"
  },
  "homepage": "https://github.com/mwhite454/photon#readme"
}
